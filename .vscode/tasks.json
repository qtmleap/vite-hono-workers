{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Integration Workflow",
      "type": "shell",
      "command": "act",
      "args": ["push", "-W", ".github/workflows/integration.yaml"],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Deployment Workflow",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/scripts/deploy.sh",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Reset D1 Database",
      "type": "shell",
      "command": "${workspaceFolder}/.vscode/scripts/reset.sh",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Sync KV from Production",
      "type": "shell",
      "command": "bun",
      "args": ["${workspaceFolder}/.vscode/scripts/sync_kv_from_prod.ts"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Generate Characters JSON",
      "type": "shell",
      "command": "bun",
      "args": ["${workspaceFolder}/.vscode/scripts/parse_store_info.ts"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
