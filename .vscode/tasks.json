{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Integration Workflow",
      "type": "shell",
      "command": "act",
      "args": ["push", "-W", ".github/workflows/integration.yaml"],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Deployment Workflow",
      "type": "shell",
      "command": "act",
      "args": [
        "pull_request",
        "-W",
        ".github/workflows/deployment.yaml",
        "--secret-file",
        ".secrets",
        "-e",
        ".github/pull_request.closed.master.json"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
